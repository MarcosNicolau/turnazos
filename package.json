{
	"name": "@nicolau/node-js-typescript-setup",
	"version": "1.0.0",
	"description": "This is the common configuration for node js project with typescript I always do",
	"main": "index.js",
	"private": true,
	"scripts": {
		"start": "node ./dist/src/server",
		"dev": "nodemon -r tsconfig-paths/register  ./src/server.ts",
		"build": "tsc",
		"prepare": "husky install",
		"test": "jest",
		"cm": "cz",
		"setup": "rm -rf .git && git init && npx npm-check-updates -u && yarn && husky install && commitizen init cz-conventional-changelog --yarn --dev --exact"
	},
	"dependencies": {
		"express": "^4.18.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.0.0",
		"@commitlint/config-conventional": "^17.0.0",
		"@types/express": "^4.17.13",
		"@types/express-serve-static-core": "^4.17.28",
		"@typescript-eslint/eslint-plugin": "^5.25.0",
		"@typescript-eslint/parser": "^5.25.0",
		"commitizen": "^4.2.4",
		"cz-conventional-changelog": "3.3.0",
		"devmoji": "^2.3.0",
		"eslint": "^8.15.0",
		"eslint-plugin-import": "^2.26.0",
		"husky": "^8.0.1",
		"lint-staged": "^12.4.1",
		"nodemon": "^2.0.16",
		"prettier": "^2.6.2",
		"semantic-release": "^19.0.2",
		"ts-node": "^10.7.0",
		"typescript": "^4.6.4",
		"@types/jest": "^27.5.1",
		"jest": "^28.1.0",
		"ts-jest": "^28.0.2",
		"tsconfig-paths-jest": "^0.0.1"
	},
	"author": "myself",
	"license": "ISC",
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
