datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         Int      @id @default(autoincrement())
  name       String
  country    String
  avatar_url String
  createdAt  DateTime @default(now())
  phone      Phone    @relation(fields: [phoneId], references: [id])
  phoneId    Int      @unique
}

model Phone {
  id           Int    @id @default(autoincrement())
  number       Int @unique
  country_code Int
  country      String
  user         User?
}
