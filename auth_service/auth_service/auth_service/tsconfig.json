{
	"ts-node": { "files": true },
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"allowJs": false,
		"allowSyntheticDefaultImports": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"declaration": true,
		"outDir": "dist",
		"lib": ["es7", "dom"],
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"composite": true,
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "./src",
		"typeRoots": ["./src/types"],
		"types": ["@types/jest", "jest"],
		"paths": {
			"api/*": ["api/*"],
			"config/*": ["config/*"],
			"constants/*": ["constants/*"],
			"events/*": ["events/*"],
			"loaders/*": ["loaders/*"],
			"services/*": ["services/*"],
			"type/*": ["types/*"],
			"utils/*": ["utils/*"]
		}
	},
	"include": ["src/**/*", "package.json", "__tests__"]
}
